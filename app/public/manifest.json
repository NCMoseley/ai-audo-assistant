{
  "name": "AI-Audo-Assistant",
  "description": "Records the current tab in an offscreen document.",
  "version": "1",
  "manifest_version": 3,
  "action": {
    // "default_icon": "icons/not-recording.png"
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["storage", "tabCapture", "offscreen", "scripting"],
  // "host_permissions": ["<all_urls>"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "16": "icons/not-recording.png",
    "48": "icons/not-recording.png",
    "128": "icons/not-recording.png"
  }
}
